{
    "name": "Context Translator Plugin",
    "description": "Translate selected text in your language based on its context.",
    "version": "1.0",
    "permissions": ["contextMenus","storage"],
    "background": {
      "service_worker": "context_menu.js"
    },
    "content_scripts": [{
      "matches":["<all_urls>"],
      "run_at":"document_start",
      "js": ["translator.js"]
    }],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "manifest_version": 3
  }
  